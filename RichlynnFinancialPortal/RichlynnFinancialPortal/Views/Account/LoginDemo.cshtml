@using RichlynnFinancialPortal.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href='//fonts.googleapis.com/css2?family=Bilbo+Swash+Caps&display=swap' rel="stylesheet">
    <link rel="stylesheet" href="~/Content/site.css">
    <link rel="stylesheet" href="~/Content/loginStyle.css" />
    <link href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link href="~/Images/favicon.png" type="image/png" rel="icon" />
    <title>Richlynn Financial</title>
</head>
<!--====================================================================================================-->
<body>
    <div class="row">
        <div class="">
            <div class="card">
                <div class="login-box">
                    <div class="login-snip">

                        <!--Head Demo Login Begins-->
                        @using (Html.BeginForm("LoginDemo", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("emailKey", "headEmail")
                            @Html.Hidden("passwordKey", "headPassword")

                            <h1 class="fontSizeXLarge" id="demoLogo">Richlynn Financial </h1>
                            <h2 class="text-white text-uppercase" id="demoLoginH2">Demo</h2>
                            <div class="form-group">
                                <button type="submit" class="btn backgroundGreen colorWhite" id="headButton" /><span data-tooltip="Head of Households can send invitations for others to create an account and join the household.  They can view all bank account, budget, and transactions in the household they are head of.">Head</span>
                            </div>
                        }

                        <!--Head Demo Login Ends-->
                        <!--Member Demo Login Begins-->
                        @using (Html.BeginForm("LoginDemo", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("emailKey", "memberEmail")
                            @Html.Hidden("passwordKey", "memberPassword")

                    <div class="form-group">
                        <button type="submit" class="btn backgroundGreen colorWhite" id="memberButton" /><span data-tooltip="Members can create bank accounts and budgets.  They can also view their own list of accounts, budgets, and transactions.">Member</span>
                    </div>
                        }

                        <!--Member Demo Login Ends-->
                        <!--New User Demo Login Begins-->
                        @using (Html.BeginForm("LoginDemo", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("emailKey", "newUserEmail")
                            @Html.Hidden("passwordKey", "newUserPassword")

                    <div class="form-group">
                        <button type="submit" class="btn backgroundGreen colorWhite" id="newUserButton" /><span data-tooltip="New users can create bank accounts, budgets, and transactions.">User</span>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "demoBackToLoginLink", @class = "colorWhite" })
                    </div>
                        }

                        <!--New User Demo Login Ends-->

                    </div>
                </div>
            </div>



        </div>


    </div>   


    <!--=====================================================================================================-->
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js'></script>
    <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
</body>
</html>