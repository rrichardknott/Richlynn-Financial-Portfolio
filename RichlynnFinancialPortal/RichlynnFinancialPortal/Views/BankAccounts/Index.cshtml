@model IEnumerable<RichlynnFinancialPortal.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}



<!--Add Bank Account Begin-->

<div class="modal fade" id="addBankAccountModal">
    <div class="modal-dialog">
        <div class="modal-content backgroundCharcoal text-white">
            <div class="modal-header">
                <h2>Add Bank Account</h2>
                <button type="button" class="close text-white" data-dismiss="modal" aria-hidden="false">x</button>
            </div>
            <div class="modal-body displayFlex">
                @Html.Action("_BankAccountModal", "BankAccounts")
            </div>          
        </div>
    </div>
</div>

<!--Add Bank Account Ends-->



<div class="container" id="bankAccountsIndexRowContainer">
    <div class="row width-100" id="bankdAccountsIndexTopRow">
        <table class="table text-white width-100" id="bankAccountsIndexColumnsContainer">
            <div class="col" id="bankAccountsIndexLeftColumn">
                <tr class="backgroundCharcoal">
                    <th>
                        Household Name
                    </th>
                    <th>
                        Account Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartingBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrentBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WarningBalance)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </div>
            <div class="col" id="bankAccountsIndexRightColumn">
                @foreach (var item in Model)
                {
                    <tr class="backgroundWhite colorBlack">
                        <td>
                            @Html.DisplayFor(modelItem => item.Household.HouseholdName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedString)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartingBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarningBalance)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="colorBlack"})
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "colorBlack" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "colorBlack" })
                        </td>
                    </tr>
                }


            </div>
        </table>
    </div>
    <p>
        <a href="#" id="bankAccountIndexAddButton"class="btn backgroundWhite" data-toggle="modal" data-target="#addBankAccountModal">Add New Account</a>
    </p>
</div>





