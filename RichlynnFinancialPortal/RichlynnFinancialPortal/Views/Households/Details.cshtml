                <tr class="fadedCharcoal">
                    <td>
                        @Html.DisplayFor(model => model.HouseholdName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Greeting)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.IsDeleted)
                    </td>
