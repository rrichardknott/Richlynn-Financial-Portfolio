@model RichlynnFinancialPortal.Models.Household

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container-fluid">
    <div class="row marginTop60">
        <table class="width-100 colorWhite height30">
            <thead class="fadedBlack">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HouseholdName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Greeting)
                    </th>
                    <th>
