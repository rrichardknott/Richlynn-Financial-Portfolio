@model IEnumerable<RichlynnFinancialPortal.Models.Household>

@{
    ViewBag.Title = "Index";
}



<div class="container-fluid">
    <div class="row table-responsive" id="householdsIndexRow">
        <table class="table colorWhite fadedBlack" id="householdsIndexTable">
            
                <tr class="colorWhite fadedBlack table height30" id="dataTable">
                    <th>
                        @Html.DisplayNameFor(model => model.HouseholdName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Greeting)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayName("Delete?")
                    </th>
                    <th>Action</th>
                </tr>
            

                @foreach (var item in Model)
                {
                    <tr class="colorWhite fadedCharcoal">
                        <td>
                            @Html.DisplayFor(modelItem => item.HouseholdName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Greeting)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            
        </table>
        @if (User.IsInRole("New User"))
        {
            <p>
                @Html.ActionLink("Create New", "Create", "Households", new { @class = "btn backgroundWhite", id = "householdsCreateButton" })
            </p>
        }

    </div>
</div>