@model IEnumerable<RichlynnFinancialPortal.Models.Notification>

@{
    ViewBag.Title = "Index";
}




<div class="container-fluid">
    <div class="row width-100">
        <table class="table text-white width-100" id="notificationsIndexTable">
            <div class="col">
                <tr class="backgroundCharcoal">

                    <th>
                        @Html.DisplayNameFor(model => model.Household.HouseholdName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Recipient.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Body)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsRead)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr class="fadedCharcoal colorWhite">
                        <td>
                            @Html.DisplayFor(modelItem => item.Household.HouseholdName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipient.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsRead)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "colorWhite" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "colorWhite" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "colorWhite" })
                        </td>
                    </tr>
                }
            </div>
        </table>
        <p>
            @Html.ActionLink("Create New", "Create", "Transactions", new { @class = "btn backgroundWhite width-100" })
        </p>
    </div>
</div>
