@model IEnumerable<RichlynnFinancialPortal.Models.Transaction>

@{
    ViewBag.Title = "Index";
}




    <div class="container-fluid">
        <div class="row" id="transactionsIndexRow">
            <table class="table colorWhite" id="transcationsIndexTable">
                <div class="col">

                    <tr class="fadedBlack" id="transactionsIndexTR">
                        <th>
                            Bill Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Owner.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Memo)
                        </th>
                        <th>
                            Deleted?
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="fadedCharcoal colorWhite">
                            <td>
                                @Html.DisplayFor(modelItem => item.BudgetItem.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Memo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDeleted)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "colorWhite" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "colorWhite" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "colorWhite" })
                            </td>
                        </tr>
                    }

                </div>


            </table>
            <p>
                @Html.ActionLink("Create New", "Create", "Transactions", new { @class = "btn backgroundWhite", id = "transactionsCreateButton" })
            </p>

        </div>
        
    </div>
   